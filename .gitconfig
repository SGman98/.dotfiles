[core]
    editor = vim
[commit]
	gpgsign = true
[gpg]
	program = gpg
[alias]
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset' --abbrev-commit
    st = status
    pl = pull
    ph = push
    u = !git pl && git ph
    cm = commit
    a = add -A
    co = checkout
    s = stash
    sp = stash pop
    su = stash -u
    sl = stash list
    sll = stash-list
    slll = stash-list --full
    ss = stash save
